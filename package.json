{
  "name": "socialecho",
  "private": true,
  "version": "2.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n web,moderation \"pnpm -C apps/web dev\" \"pnpm -C services/moderation dev\"",
    "build": "pnpm -C apps/web build",
    "start": "pnpm -C apps/web start",
    "lint": "pnpm -C apps/web lint",
    "test:e2e": "pnpm -C apps/web test:e2e"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "pnpm@9.6.0"
}
